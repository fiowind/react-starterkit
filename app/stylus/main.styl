@import'normalize'
@import'helper'

/*variables*/
$lightgrey=#999
$linkColor=#555
$grey=#eee
$black=#222
$white=#f7f7f7

html
button
input
select
textarea
  color $black
*
  box-sizing  border-box
  margin 0
  padding 0
ul
  list-style: none;
a
a:visited
  color: $linkColor
  text-decoration: none

a:hover
  color: lighten($linkColor,10%)
  
body
  color $black
  font-size 1em
  line-height 1.5
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%
  font-family 'proxima-nova', 'Proxima Nova', sans-serif
  
header
  background: #fff;
  color: #222;
  padding: 0 2em;
  height: 71px;
  border-bottom: 1px solid #ddd;
  padding-top: 6px;
  .fa-dot-circle-o
    font-weight: 900;
    color: #DC784D;
    font-size: 30px;
    line-height: 60px;
    cursor: pointer
  .appname
    padding-left 15px
    position: relative;
    top: -3px;
    font-weight: 900;
    color: #BFBBBB;
    font-size: 16px;
  section
    display: inline-block;
    top: 11px;
    position: relative;
    float: right;
    margin-right: 20px;
    label
      position: absolute;
      right: 1em;
      color: #ddd;
      font-weight: 100;
      /* line-height: 25px; */
      font-size: 14px;
      top: 11px;
    input
      line-height: 31px;
      padding: 0.2em 1em 0 1em;
      font-size: 13px;
      border-radius: 5px;
      border: 1px solid #e5e5e5;
      width: 33vw;
      &:focus
        outline: none;
  .loginsection
    top: 15px;
    margin: 0 20px;
    .fa
      color: #aaa;
      font-size: 30px;
    .loginhint
      color: #555;
      font-size: 15px;
      border-left: 1px solid #ddd;
      padding-left: 26px;
      margin-left: 30px;
      position: relative;
      top: -6px;
  
nav
  background: #F7F7FA;
  height: 60px;
  padding: 0 2em;
  .feature
    float: right;
    line-height: 60px;
    padding: 0 30px;
    border-left: 1px solid #eee;
    border-right: 1px solid #eee;
    margin-right: 16px;
    font-size: 20px;
  .nav-item
    padding-right: 45px;
    line-height: 60px;    
    display inline-block
    a
      color #999
    &.active
      a
        color: #579be6;
        line-height: 60px;
        display: inline-block;
        border-bottom: 3px solid #579be6;
  

    
.content
  h1
    text-align center
    font-size 25px
    line-height 40px
    font-weight 100
    i
      color #ddd
      font-size 10px
      padding-left 12px
  .items
    width: 80vw;
    margin: 0 auto;
    .home-items li
      list-style: none;
      padding: 10px;
      display: flex;
      position: relative;
      background: #fff;
      -webkit-box-align: center;
      cursor pointer
      &:hover
        background: #f7f7fa;
        .hide
          opacity 1!important
      .item-left
        float: left;
        flex-flow: column nowrap;
        width 65px
        text-align: center;
        display: flex;
        color: black;
        cursor: pointer;
        line-height: 17px;
        font-size: 18px;
        justify-content: center;
        padding: 0 5px;
        transition: transform 100ms ease-out;
        &:hover
          color: #5898f1;
          font-size 20px;
      .item-middle
        background-size: cover;
        background-image: url(https://ph-files.imgix.net/fe6186ad-b928-4349-9483-8a25decc3a69?auto=format&w=430&h=570&fit=max);
        border-radius: inherit;
        display: inherit;
        width: 160px;
        height: 100px;
        margin: 0 20px;
      .item-midddlecontent
        flex 1
        h2
          font-weight 600
          cursor pointer
        h3
          color: #999;
          font-weight: 500;
          font-size: 17px;
          line-height: 20px;
          cursor pointer
        .banners
          span
            box-align: center;
            align-items: center;
            -ms-flex-align: center;
            padding: 2px 4px 1px;
            color: #bbbbbb;
            font-size: 10px;
            font-weight: 600;
            text-transform: uppercase;
            border: 2px solid rgba(187,187,187,0.5);
            border-radius: 4px;
            white-space: nowrap;
            display: inline-block;
            margin-right: 5px;
            margin-top: 5px;
      .item-right
        display: flex;
        align-items: center;
        -webkit-box-align: center;
        i
          display: inline-block;
          vertical-align: middle;
          margin-left: 20px;
          color: #aaa;
          -webkit-transition: opacity 0.3s;
          -moz-transition: opacity 0.3s;
          transition: opacity 0.3s;
          &.hide
            opacity 0
            &:hover
              color #5898f1
        .img
          display: inline-block;
          margin-left: 10px;
          position: relative;
          img
            border-radius: 50%;
            height 30px
        span
          margin-left: 15px;
          color: #999;
          position: relative;
          top: 2px;

#modal-container
  .post-update-get
    height: 65px;
  .post-button-row
    bottom: 0;
    color: #fff;
    flex: 0 1 18%;
    align-items: flex-end;
    justify-content: space-between;
    display: flex;
    .left
      display: inline;
      float: left;
      color: #fff;
      padding: .4em 0;
      a
        border: 2px solid rgba(255,255,255,0.5);
        border-radius: 3px;
        margin: 0 .35em;
        display: inline-block;
        padding: .2em .7em;
        color: #fff;
  main
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    .post-main-left
      padding: 20px;
      flex: 1;
      .post-media
        .post-media-title
          position relative
          h3
            color: #aaa;
            font-size: 16px;
            display inline
          span
            float: right;
            border-radius: 4px;
            background: #ddd;
            margin: 0 4px;
            padding: 0 5px;
            width: 25px;
            text-align: center;    
        .post-media-imgs
          margin-top 1.5em
          img
            height: 200px;
            margin: 0 1rem;
      #post-discus
        margin-top: 1rem;
        .post-discus-title
          h3
            color: #aaa;
            font-size: 15px;
            display inline
          .post-discus-upvote
            float: right;
            font-size: 12px;
            color: #aaa;
        .post-discus-main
          li
            position relative
            padding-left: 67px;
            margin: 1em 0;
            .post-discus-avator
              position: absolute;
              left: 0;
              padding: 0 8px;
              img
                border-radius: 50%;
                width: 35px;
            .comment-heading
              .nc
                color: #333;
                font-weight: 600;
              .qm
                color: #999;
                font-size: 14px;
                margin-left: 10px;
              .sj
                float right
                font-size 13px
                color #aaa
    aside
      width: 28%;
      border-left: 1px solid #eee;
      padding: 20px;


